        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="@color/green">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="5dp"
                android:layout_marginStart="479dp"
                android:layout_marginEnd="479dp"
                android:background="#5BA205"
                android:elevation="8dp"
                android:orientation="horizontal"
                app:itemIconSize="42dp"
                app:itemIconTint="@color/black_green"
                app:itemRippleColor="@color/black_green"
                app:itemTextColor="@color/black_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/bottom_nav">

            </com.google.android.material.bottomnavigation.BottomNavigationView>

        </RelativeLayout>

