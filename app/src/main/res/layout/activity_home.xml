<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/badge"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Home">

    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#5BA205"
        android:padding="20dp"
        tools:ignore="MissingConstraints,UselessParent"
        tools:layout_editor_absoluteX="-44dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/logo_icon"
            android:layout_width="62dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@color/Dark_Green"
            android:contentDescription="@string/imageC"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="62dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/Dark_Green"
            android:contentDescription="@string/imageC"
            android:padding="5dp"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="17dp"
            android:background="@color/badge"
            android:elevation="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:text="@string/Search"
                android:textColor="@color/Dark_Green"
                android:textSize="20sp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/search_mag_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:contentDescription="@string/imageC"
                app:itemIconTint="@color/black_green"
                app:srcCompat="@android:drawable/ic_menu_search" />
        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="540dp"
        android:layout_height="944dp"
        android:scrollbarSize="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="116dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:ignore="SpeakableTextPresentCheck,UselessParent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card"
                            android:layout_width="535dp"
                            android:layout_height="250dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="19dp"
                            android:layout_marginBottom="5dp"
                            app:cardBackgroundColor="@color/green"
                            app:cardCornerRadius="20dp"
                            app:cardElevation="50dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="535dp"
                                    android:layout_height="296dp"
                                    android:layout_marginStart="1dp"
                                    android:contentDescription="@string/imageC"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/card1" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="130dp"
                    android:layout_height="166dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/black_green"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="115dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:background="#5BA205"
                        android:elevation="10dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/imageC"
                            android:src="@drawable/donate" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:gravity="center_horizontal"
                        android:text="@string/donate"
                        android:textAlignment="center"
                        android:textColor="@color/yellow"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="130dp"
                    android:layout_height="166dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/black_green"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="115dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:background="#5BA205"
                        android:elevation="10dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/imageC"
                            android:src="@drawable/sale" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:gravity="center_horizontal"
                        android:text="@string/sale"
                        android:textAlignment="center"
                        android:textColor="@color/yellow"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="166dp"
                    android:layout_marginEnd="25dp"
                    android:background="@color/black_green"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="115dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:background="#5BA205"
                        android:elevation="10dp">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/imageC"
                            android:src="@drawable/upcycle" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:gravity="center_horizontal"
                        android:text="@string/upcycle"
                        android:textAlignment="center"
                        android:textColor="@color/yellow"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/badge"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:fontFamily="@font/bungee_inline"
                        android:shadowColor="@color/Dark_Green"
                        android:text="@string/Recently_view"
                        android:textAllCaps="true"
                        android:textColor="@color/Dark_Green"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/black_green"
                    android:elevation="150dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/imageC"
                        android:elevation="150dp"
                        android:src="@drawable/img1">

                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:background="#5BA205"
                    android:elevation="150dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/imageC"
                        android:elevation="150dp"
                        android:src="@drawable/img1">

                    </ImageView>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/black_green"
                    android:elevation="150dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:contentDescription="@string/imageC"
                        android:elevation="150dp"
                        android:src="@drawable/img1">

                    </ImageView>

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="2dp"
        android:background="@color/green"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="1068dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="544dp"
            android:layout_height="84dp"
            android:layout_margin="5dp"
            android:layout_marginStart="479dp"
            android:layout_marginEnd="479dp"
            android:layout_marginBottom="4dp"
            android:background="#5BA205"
            android:elevation="8dp"
            android:orientation="horizontal"
            app:itemIconSize="42dp"
            app:itemIconTint="@color/black_green"
            app:itemRippleColor="@color/black_green"
            app:itemTextColor="@color/black_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav">

        </com.google.android.material.bottomnavigation.BottomNavigationView>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>